<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UniAPP.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Margin="2"
            Padding="20,0"
            Spacing="25">
            <VerticalStackLayout Padding="5">
                <Label FontSize="Medium" Text="Enter your Country: " />
                <Entry x:Name="Cname" Placeholder="for example: United states" />
            </VerticalStackLayout>
            <Button
                x:Name="BtnS"
                Clicked="BtnS_Clicked"
                Text="Search" />
            <ActivityIndicator
                x:Name="InLoading"
                IsRunning="False"
                IsVisible="False" />
            <VerticalStackLayout x:Name="Unicon" Spacing="10" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
